<class module="platform" runtimeProfile="rt" qualifiedName="com.tridium.platform.daemon.BAppSurrogate" name="BAppSurrogate" packageName="com.tridium.platform.daemon" public="true" abstract="true">
<description>
Represents an application running on a host that&#x27;s connected to a BDaemonConsole&#xa; plugin
</description>
<tag name="@author">Matt Boon on 03 Jun 02</tag>
<tag name="@since">Baja 1.0</tag>
<extends>
<type class="javax.baja.sys.BComponent"/>
</extends>
<property name="isAutoStart" flags="rt">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;isAutoStart&lt;/code&gt; property.&#xa; if true, the app will be started when the platform&#xa; daemon starts
</description>
<tag name="@see">#getIsAutoStart</tag>
<tag name="@see">#setIsAutoStart</tag>
</property>

<property name="isAutoRestart" flags="rt">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;isAutoRestart&lt;/code&gt; property.&#xa; if true, the app will be restarted by the platform daemon when&#xa; the app process terminates, unless a stop w/no restart is&#xa; requested or the process ends with a failure
</description>
<tag name="@see">#getIsAutoRestart</tag>
<tag name="@see">#setIsAutoRestart</tag>
</property>

<property name="appStatus" flags="rt">
<type class="javax.baja.platform.BStationStatus"/>
<description>
Slot for the &lt;code&gt;appStatus&lt;/code&gt; property.
</description>
<tag name="@see">#getAppStatus</tag>
<tag name="@see">#setAppStatus</tag>
</property>

<property name="appName" flags="rt">
<type class="java.lang.String"/>
<description>
Slot for the &lt;code&gt;appName&lt;/code&gt; property.
</description>
<tag name="@see">#getAppName</tag>
<tag name="@see">#setAppName</tag>
</property>

<property name="isDisabled" flags="rt">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;isDisabled&lt;/code&gt; property.&#xa; if true, the app cannot be started
</description>
<tag name="@see">#getIsDisabled</tag>
<tag name="@see">#setIsDisabled</tag>
</property>

<property name="isDirty" flags="rt">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;isDirty&lt;/code&gt; property.&#xa; if true, the app&#x27;s autostart/restart have been changed&#xa; but not yet saved to the daemon.properties
</description>
<tag name="@see">#getIsDirty</tag>
<tag name="@see">#setIsDirty</tag>
</property>

<property name="isAcceptingMessages" flags="rt">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;isAcceptingMessages&lt;/code&gt; property.&#xa; true if niagarad has access to the app&#x27;s standard input.  If&#xa; false, graceful app shutdown and thread dumps are not possible
</description>
<tag name="@see">#getIsAcceptingMessages</tag>
<tag name="@see">#setIsAcceptingMessages</tag>
</property>

<property name="logBufferSize" flags="rt">
<type class="int"/>
<description>
Slot for the &lt;code&gt;logBufferSize&lt;/code&gt; property.&#xa; size in bytes of the memory buffer used to capture the app&#x27;s output
</description>
<tag name="@see">#getLogBufferSize</tag>
<tag name="@see">#setLogBufferSize</tag>
</property>

<property name="logBufferFileSize" flags="rt">
<type class="int"/>
<description>
Slot for the &lt;code&gt;logBufferFileSize&lt;/code&gt; property.&#xa; maximum size in bytes of the file saved from the app&#x27;s output buffer
</description>
<tag name="@see">#getLogBufferFileSize</tag>
<tag name="@see">#setLogBufferFileSize</tag>
</property>

</class>
