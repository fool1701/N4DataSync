<class module="baja" runtimeProfile="rt" qualifiedName="javax.baja.sys.Localizable" name="Localizable" packageName="javax.baja.sys" public="true" interface="true" abstract="true" category="interface">
<description>
Localizable is the interface implemented by classes which &#xa; can describe themselves as a localized, user friendly string.&#xa; It is commonly used with Exceptions which may be visible to&#xa; the user.
</description>
<tag name="@author">Brian Frank</tag>
<tag name="@creation">23 Jul 02</tag>
<tag name="@version">$Revision: 1$ $Date: 7/23/02 3:14:58 PM EDT$</tag>
<tag name="@since">Baja 1.0</tag>
<annotation><type class="java.lang.FunctionalInterface"/>
</annotation>
<!-- javax.baja.sys.Localizable.toString(javax.baja.sys.Context) -->
<method name="toString"  public="true" abstract="true">
<description>
Get the instance as a localized String for the specified&#xa; Context.  If context is null then use the Sys.getLanguage().
</description>
<parameter name="context">
<type class="javax.baja.sys.Context"/>
</parameter>
<return>
<type class="java.lang.String"/>
</return>
</method>

<!-- javax.baja.sys.Localizable.fromLiteral(java.lang.String) -->
<method name="fromLiteral"  public="true" static="true">
<description>
Convenience for converting a locale-independent String literal&#xa; into a Localizable
</description>
<tag name="@since">Niagara 4.1</tag>
<parameter name="nonLocalizedLiteral">
<type class="java.lang.String"/>
</parameter>
<return>
<type class="javax.baja.sys.Localizable"/>
</return>
</method>

<!-- javax.baja.sys.Localizable.concatenate(java.lang.String, java.lang.Iterable&lt;javax.baja.sys.Localizable&gt;) -->
<method name="concatenate"  public="true" static="true">
<description>
Returns a Localizable whose result is a concatenation of the results&#xa; of other Localizables with a separator between them
</description>
<tag name="@since">Niagara 4.1</tag>
<parameter name="separator">
<type class="java.lang.String"/>
</parameter>
<parameter name="localizables">
<parameterizedType class="java.lang.Iterable">
<args>
<type class="javax.baja.sys.Localizable"/>
</args>
</parameterizedType>
</parameter>
<return>
<type class="javax.baja.sys.Localizable"/>
</return>
</method>

</class>
