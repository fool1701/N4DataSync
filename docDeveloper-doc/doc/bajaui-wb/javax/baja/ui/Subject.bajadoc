<constructor name="Subject" public="true">
<parameter name="list">
<type class="java.lang.Object" dimension="1"/>
</parameter>
<description>
Convenience for &lt;code&gt;this(list, null)&lt;/code&gt;.
</description>
</constructor>

<!-- javax.baja.ui.Subject(java.lang.Object[], java.lang.Object) -->
<constructor name="Subject" public="true">
<parameter name="list">
<type class="java.lang.Object" dimension="1"/>
