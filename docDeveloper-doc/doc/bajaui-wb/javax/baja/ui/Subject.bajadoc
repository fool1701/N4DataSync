<!-- javax.baja.ui.Subject.get() -->
<method name="get"  public="true">
<description>
Get all the selected objects.
</description>
<return>
<type class="java.lang.Object" dimension="1"/>
</return>
</method>

<!-- javax.baja.ui.Subject.get(java.lang.Object[]) -->
<method name="get"  public="true">
<description>
Get all the selected objects into the specified array &#xa; which must have a length equal to size().
</description>
<parameter name="array">
<type class="java.lang.Object" dimension="1"/>
</parameter>
<return>
<type class="java.lang.Object" dimension="1"/>
</return>
</method>

<!-- javax.baja.ui.Subject.get(int) -->
<method name="get"  public="true">
<description>
Get the selected object at the specified index.
</description>
<parameter name="index">
<type class="int"/>
</parameter>
<return>
<type class="java.lang.Object"/>
</return>
</method>

<!-- javax.baja.ui.Subject.size() -->
<method name="size"  public="true">
<description>
