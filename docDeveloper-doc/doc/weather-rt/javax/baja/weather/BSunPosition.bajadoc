<class module="weather" runtimeProfile="rt" qualifiedName="javax.baja.weather.BSunPosition" name="BSunPosition" packageName="javax.baja.weather" public="true">
<description>
Provides sun related data, dependent on curren time and location.
</description>
<tag name="@author">Lee Adcock</tag>
<tag name="@creation">07 Nov 2008</tag>
<tag name="@version">$Revision$ $Date$</tag>
<tag name="@since">Baja 1.0</tag>
<extends>
<type class="javax.baja.sys.BComponent"/>
</extends>
<property name="enabled" flags="">
<type class="boolean"/>
<description>
Slot for the &lt;code&gt;enabled&lt;/code&gt; property.
</description>
<tag name="@see">#getEnabled</tag>
<tag name="@see">#setEnabled</tag>
</property>

<property name="updatePeriod" flags="">
<type class="javax.baja.sys.BRelTime"/>
<description>
Slot for the &lt;code&gt;updatePeriod&lt;/code&gt; property.&#xa; Interval to recalculate.
</description>
<tag name="@see">#getUpdatePeriod</tag>
<tag name="@see">#setUpdatePeriod</tag>
</property>

<property name="longitude" flags="s">
<type class="double"/>
<description>
Slot for the &lt;code&gt;longitude&lt;/code&gt; property.
</description>
<tag name="@see">#getLongitude</tag>
<tag name="@see">#setLongitude</tag>
</property>

<property name="latitude" flags="s">
<type class="double"/>
<description>
Slot for the &lt;code&gt;latitude&lt;/code&gt; property.
</description>
<tag name="@see">#getLatitude</tag>
<tag name="@see">#setLatitude</tag>
</property>

<property name="dayLength" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;dayLength&lt;/code&gt; property.&#xa; The decimal hours between sunrise and sunset.
</description>
<tag name="@see">#getDayLength</tag>
<tag name="@see">#setDayLength</tag>
</property>

<property name="sunrise" flags="trs">
<type class="javax.baja.sys.BAbsTime"/>
<description>
Slot for the &lt;code&gt;sunrise&lt;/code&gt; property.&#xa; Sunrise for the current day at the specified location.  At this&#xa; time the sun&#x27;s elevation is equal to zero.
</description>
<tag name="@see">#getSunrise</tag>
<tag name="@see">#setSunrise</tag>
</property>

<property name="sunset" flags="trs">
<type class="javax.baja.sys.BAbsTime"/>
<description>
Slot for the &lt;code&gt;sunset&lt;/code&gt; property.&#xa; Sunset for the current day at the specified location.  At this&#xa; time the sun&#x27;s elevation is equal to zero.
</description>
<tag name="@see">#getSunset</tag>
<tag name="@see">#setSunset</tag>
</property>

<property name="noon" flags="trs">
<type class="javax.baja.sys.BAbsTime"/>
<description>
Slot for the &lt;code&gt;noon&lt;/code&gt; property.&#xa; Astronomical noon for the current day at the specified location, at&#xa; this time the sun&#x27;s elevation is at it&#x27;s maximum.
</description>
<tag name="@see">#getNoon</tag>
<tag name="@see">#setNoon</tag>
</property>

<property name="midnight" flags="trs">
<type class="javax.baja.sys.BAbsTime"/>
<description>
Slot for the &lt;code&gt;midnight&lt;/code&gt; property.&#xa; Astronomical midnight for the current day at the specified location, at&#xa; this time the sun&#x27;s elevation is at it&#x27;s minimum.
</description>
<tag name="@see">#getMidnight</tag>
<tag name="@see">#setMidnight</tag>
</property>

<property name="maxElevation" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;maxElevation&lt;/code&gt; property.&#xa; Maximum sun elevation for the specified day, the maximum occurs&#xa; at astronomical noon
</description>
<tag name="@see">#getMaxElevation</tag>
<tag name="@see">#setMaxElevation</tag>
</property>

<property name="minElevation" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;minElevation&lt;/code&gt; property.&#xa; Minimum sun elevation for the specified day, the minimum occurs&#xa; at astronomical midnight
</description>
<tag name="@see">#getMinElevation</tag>
<tag name="@see">#setMinElevation</tag>
</property>

<property name="currentElevation" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;currentElevation&lt;/code&gt; property.&#xa; The angle in degrees between current position of the sun and the true&#xa; horizon.
</description>
<tag name="@see">#getCurrentElevation</tag>
<tag name="@see">#setCurrentElevation</tag>
</property>

<property name="currentAzimuth" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;currentAzimuth&lt;/code&gt; property.&#xa; The direction of the sun in degrees relative to true north.
</description>
<tag name="@see">#getCurrentAzimuth</tag>
<tag name="@see">#setCurrentAzimuth</tag>
</property>

<property name="currentDeclination" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;currentDeclination&lt;/code&gt; property.&#xa; The angle between the sun and the earth&#x27;s equator.   The Sun has zero&#xa; declination during the equinoxes while crossing the equator.  At winter&#xa; solstice the declination is at it&#x27;s minimum of -23.5 and at the summer&#xa; solstice it is at it&#x27;s maximum of +23.5.
</description>
<tag name="@see">#getCurrentDeclination</tag>
<tag name="@see">#setCurrentDeclination</tag>
</property>

<property name="currentRightAscension" flags="trs">
<type class="double"/>
<description>
Slot for the &lt;code&gt;currentRightAscension&lt;/code&gt; property.&#xa; The position of the sun along the celestial equator, with zero being at&#xa; the &#x27;first point of Aries&#x27;.
</description>
<tag name="@see">#getCurrentRightAscension</tag>
<tag name="@see">#setCurrentRightAscension</tag>
</property>

<action name="recalculate" flags="">
<return>
<type class="void"/>
</return>
<description>
Slot for the &lt;code&gt;recalculate&lt;/code&gt; action.
</description>
<tag name="@see">#recalculate()</tag>
</action>

</class>
