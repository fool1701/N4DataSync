<class module="platDataRecovery" runtimeProfile="rt" qualifiedName="com.tridium.platDataRecovery.config.BDataRecoveryConfig" name="BDataRecoveryConfig" packageName="com.tridium.platDataRecovery.config" public="true">
<description>
BDataRecoveryConfig is used to configure the number, behavior, and locations&#xa; of all data recovery blocks being used in the critical data service.
</description>
<tag name="@author">Mike James on Jul 14, 2009</tag>
<tag name="@since">Baja 3.5</tag>
<extends>
<type class="javax.baja.sys.BComponent"/>
</extends>
<property name="dataRecoverySize" flags="tr">
<type class="int"/>
<description>
Slot for the &lt;code&gt;dataRecoverySize&lt;/code&gt; property.&#xa; The total amount of space, in bytes, that you want to split amount the&#xa; numberBlocks block managers.
</description>
<tag name="@see">#getDataRecoverySize</tag>
<tag name="@see">#setDataRecoverySize</tag>
</property>

<property name="numberBlocks" flags="tr">
<type class="int"/>
<description>
Slot for the &lt;code&gt;numberBlocks&lt;/code&gt; property.&#xa; The number of BDataRecoveryBlockManagers to be used. Each block will&#xa; dataRecoverySize / numberBlocks in size.
</description>
<tag name="@see">#getNumberBlocks</tag>
<tag name="@see">#setNumberBlocks</tag>
</property>

<property name="activeDirectory" flags="tr">
<type class="java.lang.String"/>
<description>
Slot for the &lt;code&gt;activeDirectory&lt;/code&gt; property.&#xa; The directory where the active data will be stored, i.e. directory on EEPROM.
</description>
<tag name="@see">#getActiveDirectory</tag>
<tag name="@see">#setActiveDirectory</tag>
</property>

<property name="persistentDirectory" flags="tr">
<type class="java.lang.String"/>
<description>
Slot for the &lt;code&gt;persistentDirectory&lt;/code&gt; property.&#xa; The directory where the persisted data will be stored when flushed, i.e. directory on FLASH.
</description>
<tag name="@see">#getPersistentDirectory</tag>
<tag name="@see">#setPersistentDirectory</tag>
</property>

<property name="activeFullPolicy" flags="tr">
<type class="com.tridium.platDataRecovery.config.BDataRecoveryFullPolicy"/>
<description>
Slot for the &lt;code&gt;activeFullPolicy&lt;/code&gt; property.&#xa; The policy to be applied when any one block throws a DataRecoveryFullException.
</description>
<tag name="@see">#getActiveFullPolicy</tag>
<tag name="@see">#setActiveFullPolicy</tag>
</property>

<property name="persistentStorageCapacity" flags="tr">
<type class="com.tridium.platDataRecovery.config.BDataRecoveryPersistenceCapacity"/>
<description>
Slot for the &lt;code&gt;persistentStorageCapacity&lt;/code&gt; property.&#xa; The amount of space, whether unlimited or capacity limited, to be reserved&#xa; for flushed data recovery.
</description>
<tag name="@see">#getPersistentStorageCapacity</tag>
<tag name="@see">#setPersistentStorageCapacity</tag>
</property>

<topic name="configurationChanged" flags="">
<eventType>
<type class="com.tridium.platDataRecovery.config.BDataRecoveryConfig"/>
</eventType><description>
Slot for the &lt;code&gt;configurationChanged&lt;/code&gt; topic.&#xa; Fire this when you detect a change in your value
</description>
<tag name="@see">#fireConfigurationChanged</tag>
</topic>

</class>
</bajadoc>
